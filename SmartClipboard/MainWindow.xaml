<Window x:Class="SmartClipboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartClipboard"
        xmlns:converters="clr-namespace:SmartClipboard.Utilities"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Window.Resources>
        <converters:PinConverter x:Key="PinConverter" />
    </Window.Resources>
    <Grid Margin="0,35,0,0">
        <TextBox 
            HorizontalAlignment="Left" TextWrapping="Wrap"
            VerticalAlignment="Top" Width="400" Height="30" 
            Margin="0,-35,0,0" FontSize="14"
            Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
            />

        <ListBox ItemsSource="{Binding ClipboardItems}" Margin="0,0,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="4">
                        <TextBlock Text="{Binding Content}" TextWrapping="Wrap"
                                   TextTrimming="CharacterEllipsis"/>
                        <Image Source="{Binding ImagePreview}" MaxHeight="75" Visibility="{Binding Type}" />
                        <TextBlock Text="{Binding FilePathList}" TextWrapping="Wrap" />
                        <TextBlock Text="{Binding ImagePath}" TextWrapping="Wrap" />
                        <TextBlock Text="{Binding Timestamp}" FontSize="10" Foreground="Gray"/>
                        <TextBlock Text="{Binding Type}" FontSize="10" Foreground="DarkGreen"/>
                        <Button 
                            Content="{Binding IsPinned, Converter={StaticResource PinConverter}}"
                            Command="{Binding DataContext.TogglePinCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}" Width="80" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>

</Window>

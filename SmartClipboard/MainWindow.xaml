<Window x:Class="SmartClipboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartClipboard"
        xmlns:converters="clr-namespace:SmartClipboard.Utilities.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Window.Resources>
        <converters:PinConverter x:Key="PinConverter" />
        <converters:ContentTypeConverter x:Key="ContentTypeConverter" />
    </Window.Resources>
    <Grid>

        <ItemsControl ItemsSource="{Binding AvailableTypes}" HorizontalAlignment="Left" Width="45">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Converter={StaticResource ContentTypeConverter}}" 
                        Command="{Binding DataContext.FilterByTypeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}" 
                        Margin="5" Width="30" Height="30" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TextBox TextWrapping="Wrap"
            VerticalAlignment="Top" Height="30" FontSize="14"
            Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" Margin="50,0,0,0"
            />

        <ListBox ItemsSource="{Binding ClipboardItems}" Margin="50,35,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="4">
                        <TextBlock Text="{Binding Content}" TextWrapping="Wrap"
                                   TextTrimming="CharacterEllipsis"/>
                        <Image Source="{Binding ImagePreview}" MaxHeight="75" Visibility="{Binding Type}" />
                        <TextBlock Text="{Binding FilePathList}" TextWrapping="Wrap" />
                        <TextBlock Text="{Binding ImagePath}" TextWrapping="Wrap" />
                        <TextBlock Text="{Binding Timestamp}" FontSize="10" Foreground="Gray"/>
                        <TextBlock Text="{Binding Type}" FontSize="10" Foreground="DarkGreen"/>
                        <Button 
                            Content="{Binding IsPinned, Converter={StaticResource PinConverter}}" 
                            Command="{Binding DataContext.TogglePinCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}" Width="80" />
                        <Button 
                            Content="🗑" 
                            Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}" Width="80" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>

</Window>
